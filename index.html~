  <script>
       function setWeb3Provider() {   
        // set the provider you want from Web3.providers
           //var web3 = new Web3(new Web3.providers.HttpProvider("http://localhost:8545"));
	   //console.log ("local RPC connected for new!!");
	try {
	var server_ip = document.getElementById('eth-server-ip').value;
	var server_port = document.getElementById('eth-server-port').value;
	//server_url =  server_url.concat("http://", server_ip, ":", server_port)；
	var web3 = new Web3(new Web3.providers.HttpProvider("http://"+server_ip+":" + server_port));	
	var server_status=document.getElementById("server_status");
	if (web3.isConnected() == true) {		
		server_status.innerText="已连接";
		//alert("connect");
	}
	else {
		server_status.innerText="未连接";
		//alert("fail");
	}
	}
	catch (e){
		alert("get error:" + e);
	}
      }

    </script>

